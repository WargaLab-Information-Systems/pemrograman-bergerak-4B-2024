<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_halamanmasuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/imagemasuk"
        android:adjustViewBounds="true"
        />

    <TextView
        android:textFontWeight="700"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Universitas Trunojoyo"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"/>

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Selamat datang di Aplikasi milik Universitas Trunojoyo"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        android:layout_marginLeft="25dp"/>

    <EditText
        android:id="@+id/editText_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan nama kamu"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:text="Lanjut"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/cornerbutton"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="btnLanjut"/>

</LinearLayout>
